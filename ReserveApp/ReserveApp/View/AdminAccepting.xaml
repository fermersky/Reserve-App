<Window x:Class="ReserveApp.View.AdminAccepting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReserveApp.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="Заявки" Height="700" Width="300">
    <Grid>
        <ListView x:Name="ApplicationsList" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <StackPanel>
                            <StackPanel>
                                <Label x:Name="ApplicationId" Content="{Binding Id}"></Label>
                                <Label Content="{Binding Comment}"></Label>
                                <Label Content="{Binding Lesson}"></Label>
                                <Label Content="{Binding Users.Fullname}"></Label>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding RelativeSource={RelativeSource FindAncestor, 
                                AncestorType={x:Type Window}}, Path=DataContext.AcceptApplicationCommand}" CommandParameter="{Binding ElementName=ApplicationId, Path=Content}">Принять</Button>
                                <Button>Отклонить</Button>
                            </StackPanel>
                        </StackPanel>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
